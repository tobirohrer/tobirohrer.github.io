        script.
          var textIndex = 0;
          var texts = ["Hackathon.", "Datathon."];
          var currentText = texts[textIndex];
          var textLength = currentText.length;
          var element = document.getElementById('dynamicText');
          var container = document.getElementById('dynamicTextContainer');

          function typeText() {
            var typedText = '';
            var i = 0;

            var typingInterval = setInterval(function() {
              typedText += currentText[i];
              element.innerText = typedText;
              i++;

              if (i >= textLength) {
                clearInterval(typingInterval);
                setTimeout(eraseText, 2000); // Wait before erasing the text
              }
            }, 100); // Typing animation speed
          }

          function eraseText() {
            var text = element.innerText;
            var eraseInterval = setInterval(function() {
              text = text.slice(0, -1);
              element.innerText = text;

              if (text === '') {
                clearInterval(eraseInterval);
                textIndex = (textIndex + 1) % texts.length;
                currentText = texts[textIndex];
                textLength = currentText.length;
                setTimeout(typeText, 400); // Wait before typing the next text
              }
            }, 100); // Erasing animation speed
          }

          typeText();

